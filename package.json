{
  "name": "svgpath-render",
  "version": "0.0.1",
  "description": "small library for drawing svg path",
  "main": "src/index.js",
  "scripts": {
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "build": "npm run build:types && npm run build:js && webpack",
    "build:watch": "nodemon --watch src/**.* --ignore *.d.ts, *.spec.ts --exec npm run build",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "babel src --out-dir lib --extensions \".ts,.tsx\" --source-maps inline",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "svg",
    "javascript"
  ],
  "author": {
    "name": "Amit Leshem",
    "url": "http://www.happy-spider.com/"
  },
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-typescript": "^7.9.0",
    "@types/jest": "^25.2.1",
    "@types/node": "^13.11.1",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "html-webpack-plugin": "^4.0.4",
    "jest": "^25.3.0",
    "nodemon": "^2.0.3",
    "remove-files-webpack-plugin": "^1.4.0",
    "ts-jest": "^25.3.1",
    "typescript": "^3.8.3",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11"
  }
}
